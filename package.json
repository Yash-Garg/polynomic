{
  "name": "polynomic",
  "version": "0.2.1",
  "description": "Advanced utilities to manipulate SVG paths",
  "main": "lib/index.js",
  "files": [
    "dist",
    "lib"
  ],
  "author": "Anthony Dugois <dev.anthonydugois@gmail.com>",
  "license": "MIT",
  "devDependencies": {
    "babel-cli": "^6.14.0",
    "babel-core": "^6.13.2",
    "babel-eslint": "^6.1.2",
    "babel-jest": "^15.0.0",
    "babel-loader": "^6.2.5",
    "babel-plugin-add-module-exports": "^0.2.1",
    "babel-plugin-syntax-trailing-function-commas": "^6.13.0",
    "babel-plugin-transform-export-extensions": "^6.8.0",
    "babel-plugin-transform-flow-strip-types": "^6.18.0",
    "babel-plugin-transform-object-rest-spread": "^6.8.0",
    "babel-polyfill": "^6.13.0",
    "babel-preset-es2015": "^6.13.2",
    "babel-preset-es2016": "^6.11.3",
    "cross-env": "^2.0.1",
    "eslint": "^3.3.1",
    "flow-bin": "^0.33.0",
    "gh-pages": "^0.11.0",
    "jest": "^15.1.1",
    "path": "^0.12.7",
    "rimraf": "^2.5.4",
    "webpack": "^1.13.2"
  },
  "dependencies": {
    "lodash.isequal": "^4.4.0"
  },
  "scripts": {
    "lint": "npm run lint:eslint && npm run lint:flow",
    "lint:eslint": "eslint src",
    "lint:flow": "flow check || exit 0",
    "clean": "npm run clean:build && npm run clean:docs",
    "clean:build": "rimraf lib dist coverage",
    "clean:docs": "rimraf docs",
    "build": "npm run build:commonjs && npm run build:umd && npm run build:umd:min",
    "build:commonjs": "cross-env BABEL_ENV=commonjs babel src --ignore **/test.js --out-dir lib",
    "build:umd": "cross-env BABEL_ENV=commonjs NODE_ENV=development webpack src/index.js dist/polynomic.js",
    "build:umd:min": "cross-env BABEL_ENV=commonjs NODE_ENV=production webpack src/index.js dist/polynomic.min.js",
    "test": "jest",
    "docs": "cd site && npm run build",
    "preversion": "npm test",
    "postversion": "git push && git push --tags",
    "prepublish": "npm test && npm run lint && npm run build",
    "postpublish": "npm run clean",
    "predeploy": "npm run docs",
    "deploy": "gh-pages -d docs"
  },
  "jest": {
    "testRegex": "test\\.js$"
  }
}
